<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News.LCGHNewsFragment"
    android:background="@drawable/yellow_gradient">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#B5F8C85F"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="L.C.G.H News"
        android:textAllCaps="false"
        android:textColor="#022896"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="60dp"
        android:background="#022896"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="65dp"
        android:background="#A7022896"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's News"
        android:shadowColor="#B5F8C85F"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:textAllCaps="false"
        android:textColor="#022896"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="115dp"
        android:background="#A7022896"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/todaysnews"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="133dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:shapeAppearanceOverlay="@style/roundedcorners" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recents"
        android:shadowColor="#B5F8C85F"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:textAllCaps="false"
        android:textColor="#022896"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="475dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="510dp"
        android:background="#A7022896"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewnews"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:layout_marginTop="530dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="30dp"/>
    </FrameLayout>

</ScrollView>