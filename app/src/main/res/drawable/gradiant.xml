<?xml version = "1.0" encoding = "utf-8" ?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <item tools:ignore="StateListReachable">
    <shape>

    <gradient
        android:endColor = "#FAF4E3"
        android:centerColor = "#F8E2AA"
        android:startColor = "#FAC538"
        android:angle = "90"
        android:type = "linear" />
    <corners android:radius="30dp"/>
        <padding android:right="10dp"
            android:left="10dp"
            android:top="10dp"
            android:bottom="10dp"/>
        <stroke
            android:width="1dp"
            android:color = "#FAC538" tools:ignore="StateListReachable" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color = "#F8E2AA"/>
            <corners android:radius="30dp"/>
            <padding android:right="10dp"
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:width="1dp"
                android:color = "#FAC538"/>
        </shape>
    </item>

    </selector>

